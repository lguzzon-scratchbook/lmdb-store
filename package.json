{
  "name": "lmdb-store",
  "author": "Kris Zyp",
  "version": "1.6.8",
  "description": "Simple, efficient, scalable data store wrapper for LMDB",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/DoctorEvidence/lmdb-store.git"
  },
  "keywords": [
    "lmdb",
    "database",
    "mdb",
    "lightning"
  ],
  "type": "module",
  "module": "index.js",
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "import": "./index.js"
    },
    "./index.js": {
      "require": "./dist/index.cjs",
      "import": "./index.js"
    }
  },
  "types": "./index.d.ts",
  "tsd": {
    "directory": "test/types"
  },
  "scripts": {
    "install": "node-gyp-build",
    "build": "node-gyp configure && node-gyp build -d && rollup -c",
    "build-js": "rollup -c",
    "prebuild": "prebuildify --target 16.9.0 && prebuildify --target 14.17.6 && prebuildify --target 12.18.0",
    "prepare": "rollup -c && prebuildify-ci download && prebuildify --target 16.9.0 && prebuildify --target 14.17.6 && prebuildify --target 12.18.0 && prebuildify --target electron@13.1.4",
    "recompile": "node-gyp clean && node-gyp configure && node-gyp build -d",
    "test": "mocha test/**.test.js --recursive && npm run test:types",
    "test2": "mocha tests -u tdd",
    "test:types": "tsd",
    "benchmark": "node --turbo-fast-api-calls ./benchmark/index.js",
    "benchmark-ll": "node ./benchmark/low-level.js"
  },
  "gypfile": true,
  "dependencies": {
    "msgpackr": "^1.4.4",
    "nan": "^2.15.0",
    "node-gyp-build": "^4.3.0",
    "ordered-binary": "^1.1.3",
    "weak-lru-cache": "^1.1.2"
  },
  "optionalDependencies": {
    "msgpackr": "^1.4.4"
  },
  "devDependencies": {
    "@types/node": "^16.10.1",
    "benchmark": "^2.1.4",
    "chai": "^4.3.4",
    "fs-extra": "^10.0.0",
    "jshint": "^2.13.1",
    "mocha": "^9.1.2",
    "prebuildify": "^4.2.1",
    "prebuildify-ci": "^1.0.5",
    "rimraf": "^3.0.2",
    "rollup": "^2.57.0",
    "tsd": "^0.17.0"
  },
  "bugs": {
    "url": "https://github.com/DoctorEvidence/lmdb-store/issues"
  },
  "homepage": "https://github.com/DoctorEvidence/lmdb-store#readme",
  "directories": {
    "test": "tests"
  }
}
